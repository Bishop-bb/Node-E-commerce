<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3 mt-4">
                <h2 style="text-align: center;"> User Login </h2>
                <div style="text-align: center;"><strong><%= errors %></strong>  </div>  
                   <div class="card-body">
                    <form action="/login" method="post" novalidate> 
                  <div class="mb-3">
                    <label for="email" class="form-label">email</label>
                    <input type="email" value="<%= previousInput.length >0 && previousInput[0].email ? previousInput[0].email : ''  %>" class="form-control"  name="email" placeholder="Email">
                    <% if (loginError.length > 0) {
                        for(let error of loginError){
                            if(error.param == "email"){ %>
                                <strong><%= error.msg %></strong>
                     
                            <% } %>
                      <% }
                    }%>
                    <div style="color:red"></div>
                  </div>
                  <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control"  name="password" placeholder="Password">
                    <% if (loginError.length > 0) {
                        for(let error of loginError){
                            if(error.param == "password"){ %>
                                <strong><%= error.msg %></strong>
                     
                            <% } %>
                      <% }
                    }%>
                    <div style="color:red"></div>
                  </div>
                  
                
                   <input type="submit" class="btn btn-primary" value="Login">
                </form>
                  </div>
